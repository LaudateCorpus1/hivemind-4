{
	"name": "screeps-bot-hivemind",
	"version": "2.0.1",
	"description": "",
	"main": "src/main.js",
	"screeps_bot": true,
	"repository": {
		"type": "git",
		"url": "git://github.com/Mirroar/hivemind.git"
	},
	"author": "David Franke",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Mirroar/hivemind/issues"
	},
	"scripts": {
		"test": "xo && ava",
		"coverage": "nyc ava"
	},
	"devDependencies": {
		"ava": "^1.4.1",
		"grunt": "^1.3.0",
		"grunt-screeps": "^1.5.0",
		"lodash": "^4.17.21",
		"nyc": "^13.3.0",
		"xo": "^0.24.0"
	},
	"xo": {
		"rules": {
			"brace-style": [
				"error",
				"stroustrup"
			],
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"curly": [
				"error",
				"multi-line"
			],
			"import/no-unresolved": [
				"error",
				{
					"ignore": [
						"relations.local",
						"settings.local"
					]
				}
			],
			"import/no-unassigned-import": [
				"error",
				{
					"allow": [
						"**/prototype.*",
						"**/constants"
					]
				}
			],
			"prefer-destructuring": [
				"error",
				{
					"array": false,
					"object": false
				}
			]
		},
		"globals": [
			"_",
			"Game",
			"Memory"
		],
		"ignores": [
			"src/packrat.js",
			"src/screeps-profiler.js",
			"src/snippets.js",
			"mock/constants.js"
		]
	}
}
